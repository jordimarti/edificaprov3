<p id="notice"><%= notice %></p>

<h1>Video Ratings</h1>

<table>
  <thead>
    <tr>
      <th>Video</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @video_ratings.each do |video_rating| %>
      <tr>
        <td><%= video_rating.video_id %></td>
        <td><%= video_rating.score %></td>
        <td><%= link_to 'Show', video_rating %></td>
        <td><%= link_to 'Edit', edit_video_rating_path(video_rating) %></td>
        <td><%= link_to 'Destroy', video_rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Video Rating', new_video_rating_path %>
